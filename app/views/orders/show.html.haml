.container
  .page-header
    = link_to orders_path, :class => 'btn btn-default' do
      %span.glyphicon.glyphicon-list-alt
      Back
    = link_to edit_order_path(@order), :class => 'btn btn-primary' do
      %span.glyphicon.glyphicon-pencil
      Edit
    %h1 Show order

  %dl.dl-horizontal
    %dt Name:
    %dd= @order.name
    %dt Email:
    %dd= @order.email
    %dt Phone:
    %dd= @order.phone
    %dt Location:
    %dd= @order.location
    %dt Special:
    %dd= @order.special

