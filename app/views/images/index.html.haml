.container
  .page-header
    = link_to new_order_image_path(@order.id), :class => 'btn btn-primary' do
      %span.glyphicon.glyphicon-plus
      New Image
    %h1 Listing images

  .table-responsive
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Title
          %th Description
          %th Order
          %th
          %th
          %th

      %tbody
        - @images.each do |image|
          %tr
            %td= image.title
            %td= image.description
            %td= image.order
            %td= link_to 'Show', image
            %td= link_to 'Edit', edit_image_path(image)
            %td= link_to 'Destroy', image, :data => { confirm: 'Are you sure?' }, :method => :delete
