.contain
  %section.gallery
    - @images.each do |image|
      =image_tag image.pic(:large)
  .row.black
    .row__inner
      - @images.each do |image|
        .tile
          .tile__media 
            =link_to image_tag(image.pic(:medium)), image.pic(:large)
            .tile__details
              -if image.description
                = image.description
              .tile__title
                -if image.title
                  = image.title

= render partial: "client_form_modal"
= render partial: "artist_form_modal"