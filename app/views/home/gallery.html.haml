.contain
  %section.gallery
    - @images.each do |image|
      =image_tag image.pic(:large)
  .row.black
    .row__inner
      - @images.each do |image|
        =link_to order_image_path(image.order_id, image.id) do 
          .tile
            .tile__media 
              =image_tag(image.pic(:medium))
              .tile__details
                -if image.description
                  = image.description
                .tile__title
                  -if image.title
                    = image.title
                


