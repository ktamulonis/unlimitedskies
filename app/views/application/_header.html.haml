%body#top{ data: { spy: "scroll", target: "#navbar"} }
  %header.slideup.affix-top{ data: { spy: "affix", "offset-top": 10 } }
    = navbar id: "navbar", fluid: true, position: :top, padding: 0 do
      = vertical do
        = link_to root_path do
          %span
            =image_tag('https://s3.amazonaws.com/unlimitedskiesdrone/logo.png', class: "logo-nav")
            Unlimited Skies
      = horizontal do
        = nav class: 'navbar-right' do
          = link_to 'CLIENTS', "#client_form", "data-toggle" => "modal", class: 'center'
          = link_to 'ARTISTS', "#artist_form", "data-toggle" => "modal", class: 'center'
          = link_to "tel:2098376634", class: "btn btn" do
            %span.glyphicon.glyphicon-earphone
          //= render partial: "application/account_dropdown"
